html, body {
    min-height: 100%;
}

body {
    background: rgba(46,8,84,1);
    background: -moz-linear-gradient(top, rgba(46,8,84,1) 0%, rgba(25,25,112,1) 100%);
    background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(46,8,84,1)), color-stop(100%, rgba(25,25,112,1)));
    background: -webkit-linear-gradient(top, rgba(46,8,84,1) 0%, rgba(25,25,112,1) 100%);
    background: -o-linear-gradient(top, rgba(46,8,84,1) 0%, rgba(25,25,112,1) 100%);
    background: -ms-linear-gradient(top, rgba(46,8,84,1) 0%, rgba(25,25,112,1) 100%);
    background: linear-gradient(to bottom, rgba(46,8,84,1) 0%, rgba(25,25,112,1) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#2e0854', endColorstr='#191970', GradientType=0 );
    width: 100%;
    height: 100%;
    color: white;

    font-family: 'Poiret One', cursive;
}

.row {
    margin-top: 15%;
}

#countdown-row {
    margin-top: 50px;
    font-size: 30px;
    text-align: center;
}